{
  "name": "mutent",
  "version": "1.0.0",
  "description": "Keep business logic and other code separated",
  "main": "mutent.js",
  "types": "types/index.d.ts",
  "files": [
    "mutent.js",
    "types"
  ],
  "keywords": [
    "business-logic",
    "crud",
    "entity",
    "immutable"
  ],
  "scripts": {
    "test:ts": "tsc --noEmit",
    "test:lint": "eslint src/**/*.ts",
    "test:unit": "ava",
    "test": "npm run test:ts && npm run test:lint && npm run test:unit",
    "build:types": "rimraf types && tsc --declaration --emitDeclarationOnly --declarationDir types",
    "build:js": "rimraf .out && tsc --module es6 && rollup -c",
    "build": "npm run build:types && npm run build:js",
    "prepublishOnly": "npm run test && npm run build"
  },
  "author": "Giacomo Gregoletto",
  "license": "MIT",
  "dependencies": {
    "readable-stream": "^3.5.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.149",
    "@types/mongodb": "^3.3.15",
    "@types/node": "^13.7.0",
    "@types/readable-stream": "^2.3.5",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "ava": "^3.2.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^1.31.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/greguz/mutent.git"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "**/*.spec.ts"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:lint",
      "pre-push": "npm test"
    }
  }
}
