{
  "name": "mutent",
  "version": "1.1.2",
  "description": "Keep business logic and other code separated",
  "main": "mutent.js",
  "types": "types/index.d.ts",
  "files": [
    "mutent.js",
    "types"
  ],
  "keywords": [
    "business-logic",
    "crud",
    "entity",
    "immutable"
  ],
  "scripts": {
    "test:ts": "tsc --noEmit",
    "test:lint": "tslint -p tsconfig.json && tslint -p tsconfig.spec.json",
    "test:unit": "ava",
    "test": "npm run test:ts && npm run test:lint && npm run test:unit",
    "coverage": "nyc --reporter=lcov --reporter=text-summary ava",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "build:types": "rimraf types && tsc --declaration --emitDeclarationOnly --declarationDir types",
    "build:js": "rimraf .out && tsc --module es6 && rollup -c",
    "build": "npm run build:types && npm run build:js",
    "prepublishOnly": "npm run test && npm run build"
  },
  "author": "Giacomo Gregoletto",
  "license": "MIT",
  "dependencies": {
    "fluente": "^1.0.0",
    "readable-stream": "^3.6.0"
  },
  "devDependencies": {
    "@types/node": "^13.13.4",
    "@types/readable-stream": "^2.3.5",
    "ava": "^3.8.1",
    "coveralls": "^3.1.0",
    "husky": "^4.2.5",
    "nyc": "^15.0.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.7.6",
    "ts-node": "^8.9.1",
    "tslint": "^6.1.2",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^3.8.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/greguz/mutent.git"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "**/*.spec.ts"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ]
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.spec.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:lint",
      "pre-push": "npm test"
    }
  }
}
