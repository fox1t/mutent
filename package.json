{
  "name": "mutent",
  "version": "2.0.0-0",
  "description": "An insanely small utility that helps you to keep business logic and other code separated",
  "main": "mutent.js",
  "types": "types/index.d.ts",
  "files": [
    "mutent.js",
    "types"
  ],
  "keywords": [
    "business-logic",
    "crud",
    "entity",
    "immutable"
  ],
  "scripts": {
    "test:ts": "tsc --noEmit",
    "test:lint": "eslint src/**/*.ts",
    "test:unit": "ava",
    "test": "npm run test:ts && npm run test:lint && npm run test:unit",
    "coverage": "nyc --reporter=lcov --reporter=text-summary ava",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "build:types": "rimraf types && tsc --declaration --emitDeclarationOnly --declarationDir types",
    "build:js": "rimraf .out && tsc --module es6 && rollup -c",
    "build": "npm run build:types && npm run build:js",
    "prepublishOnly": "npm run test && npm run build"
  },
  "author": "Giacomo Gregoletto",
  "license": "MIT",
  "dependencies": {
    "fluente": "^1.0.0",
    "readable-stream": "^3.6.0"
  },
  "devDependencies": {
    "@types/node": "^13.13.4",
    "@types/readable-stream": "^2.3.5",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "ava": "^3.8.1",
    "coveralls": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "nyc": "^15.0.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.7.6",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/greguz/mutent.git"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "**/*.spec.ts"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ]
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.spec.ts"
    ]
  }
}
