{
  "name": "mutent",
  "version": "0.8.0",
  "description": "Keep business logic and other code separated",
  "main": "mutent.js",
  "types": "types/index.d.ts",
  "files": [
    "mutent.js",
    "types"
  ],
  "keywords": [
    "business-logic",
    "crud",
    "entity",
    "immutable"
  ],
  "scripts": {
    "test:lint": "eslint src/**/*.ts",
    "test:ts": "tsc --noEmit",
    "test:unit": "ava",
    "test": "npm run test:ts && npm run test:lint && npm run test:unit",
    "build:types": "rimraf types && tsc --declaration --emitDeclarationOnly --declarationDir types",
    "build:js": "rimraf .out && tsc --module es6 && rollup -c",
    "build": "npm run build:types && npm run build:js",
    "prepublishOnly": "npm test && npm run build"
  },
  "author": "Giacomo Gregoletto",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.11.0",
    "@typescript-eslint/parser": "^2.11.0",
    "ava": "^2.4.0",
    "eslint": "^6.7.2",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "rimraf": "^3.0.0",
    "rollup": "^1.27.11",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/greguz/mutent.git"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "files": [
      "**/*.spec.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
