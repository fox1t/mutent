{
  "name": "mutent",
  "version": "0.2.1",
  "description": "Keep business logic and other code separated",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "keywords": [
    "business-logic",
    "crud",
    "entity",
    "immutable"
  ],
  "scripts": {
    "test:ts": "tsc --noEmit",
    "test:unit": "ava",
    "test": "npm run test:ts && npm run test:unit",
    "build:types": "tsc --emitDeclarationOnly --declaration",
    "build:js": "tsc",
    "build": "npm run build:types && npm run build:js",
    "prepublishOnly": "npm test && npm run build"
  },
  "author": "Giacomo Gregoletto",
  "license": "MIT",
  "devDependencies": {
    "ava": "^2.4.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/greguz/mutent.git"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "files": [
      "**/*.spec.ts"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ]
  }
}
